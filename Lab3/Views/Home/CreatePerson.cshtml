@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Person";
}
<h3>Create Person</h3>
<form asp-controller="Home" asp-action="DisplayPerson"  method="post">
    <table>
        <tr>
            <td>First Name</td>
            <td><input type="text" placeholder="Enter first name"name="firstName" /></td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td><input type="text" placeholder="Enter last name"name="lastName" /></td>
        </tr>

        <tr>
            <td>Age</td>
            <td><input type="number" name="age" min="1" max="100"> </td>
        </tr>
       <tr>
            <td>Email Address</td>
            <td><input type="email" placeholder="Enter Email Address" name="EmailAddress" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" placeholder="Enter Password"  name="pass" /></td>
        </tr>
        <tr>
            <td>Discription</td>
            <td><input type="text" name="personDiscription" /></td>
        </tr>
        
    </table>
    <input type="submit" value="Add" />
    <br>
    <br>
</form>